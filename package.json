{
  "name": "snug-css",
  "version": "1.0.1",
  "description": "A simple grid framework for Adobe XD.",
  "keywords": [
    "css",
    "sass",
    "framework",
    "flexbox",
    "responsive",
    "web",
    "front-end"
  ],
  "scripts": {
    "stylelint": "stylelint --config stylelintrc.js --syntax scss files/lib/sass/** --fix",
    "compile": "node-sass --include-path scss files/lib/sass/style.scss files/lib/css/style.css --output-style compressed",
    "build": "postcss --config postcss.config.js files/lib/css/style.css -o files/lib/css/style.min.css",
    "sync": "browser-sync start --server --files='./files/*.html, ./*.css'",
    "all": "npm-run-all stylelint compile build sync"
  },
  "author": "Masato Nakamura",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-scss": "^2.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0"
  },
  "dependencies": {
    "cssnano": "^4.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-scss": "^2.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0"
  }
}
