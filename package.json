{
  "name": "snug-css",
  "version": "1.0.1",
  "description": "A simple grid framework for Adobe XD.",
  "keywords": [
    "css",
    "sass",
    "framework",
    "flexbox",
    "responsive",
    "web"
  ],
  "scripts": {
    "stylelint": "stylelint --config stylelintrc.js --syntax scss src/_scss/** --fix",
    "compile": "node-sass -w --include-path scss src/_scss/main.scss src/css/main.css --output-style expanded",
    "build": "postcss -w --config postcss.config.js src/_scss/*.scss -o src/css/main.min.css",
    "sync": "browser-sync start --server ./src --no-notify --no-open --files='./src/*.html, ./src/css/*.css, ./src/js/*.js'",
    "all": "npm-run-all -p stylelint compile build sync"
  },
  "author": "Masato Nakamura",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.1.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0"
  },
  "dependencies": {
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0"
  }
}
