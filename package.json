{
  "name": "snug-css",
  "version": "1.0.1",
  "description": "A simple grid framework for Adobe XD.",
  "keywords": [
    "css",
    "sass",
    "framework",
    "flexbox",
    "responsive",
    "web"
  ],
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": "Masato Nakamura",
  "license": "MIT",
  "scripts": {
    "stylelint": "stylelint --config stylelintrc.js --syntax scss src/_scss/** --fix",
    "compile": "node-sass -w --include-path scss src/_scss/main.scss dist/css/main.css --output-style expanded",
    "build": "postcss -w --config postcss.config.js src/_scss/*.scss -o dist/css/main.min.css",
    "pug": "pug -w src/_pug/*.pug -P -O ./pug.json -o ./dist/",
    "imagemin": "node imagemin.js -w",
    "sync": "browser-sync start --server ./dist --no-notify --no-open --files='./src/*.html, ./dist/css/*.css, ./src/js/*.js, ./src/images/*', ./src/_pug/*",
    "all": "npm-run-all -p stylelint imagemin compile build pug sync"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.26.3",
    "cssnano": "^4.1.0",
    "imagemin": "^6.1.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.1.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^2.0.0"
  }
}
